v-dialog(v-model='settingsDialog' fullscreen hide-overlay transition='dialog-bottom-transition')
  v-card(:dark='isDark')
    v-toolbar(dark color='primary')
      v-btn(icon dark @click.native='settingsDialog = false')
        v-icon close

      v-toolbar-title.font-weight-light Settings
      v-spacer
    v-container.px-0(fluid)
      v-list
        //- Dark Mode
        v-list-tile(@click='toggleDarkMode()')
          v-list-tile-action
            v-icon fas {{ isDark ? `fa-moon` : `fa-sun` }}
          v-list-tile-content
            v-list-tile-title {{ isDark ? `Dark Mode` : `Light Mode` }}
        //- Units
        v-list-tile(@click='toggleMetricUnits()')
          v-list-tile-action
            v-icon fas fa-ruler-combined
          v-list-tile-content
            v-list-tile-title {{ isMetric ? `Metric Units` : `Imperial Units` }}
            v-list-tile-sub-title {{ isMetric ? `(mm, cm, m)` : `(in, ft)` }}
