v-dialog(v-model='settingsDialog' max-width='560px')
  v-card(:dark='isDark')
    v-card-title(primary-title)
      div.title Settings
    v-container.px(fluid)
      v-list
        //- Dark Mode
        v-list-tile(@click='toggleDarkMode()')
          v-list-tile-content
            v-list-tile-title Enable dark mode
          v-list-tile-action
            v-switch(v-model='isDark')
        v-divider
        v-list-tile(@click='clearDataDialog = !clearDataDialog' :disabled='localDataCheck')
          v-list-tile-title Clear all app data
        v-divider
      v-layout(row justify-end)
        v-btn(color='primary' @click='settingsDialog = false') Done
