extends ../layouts/_stepper-step-main.pug
block title
  | Determine the average wall thickness of the sleeve or ferrule
block subtitle
  | Measure the wall of the sleeve or ferrule in at least 3 places
block card-body
  div(v-for='(f, i) in calcInput.ferruleWallMeas' :key='i')
    v-text-field(type='number' label='' box v-model='calcInput.ferruleWallMeas[i]' clearable :label='`Ferrule wall thickness #` + (i + 1) + [theAppIsMetric ? ` (cm)` : ` (in)`]')
      v-btn(flat icon color='error' slot='append-outer' v-show='(i + 1) > 3' style='top: -10px;' @click.native='removeMeas(calcInput.ferruleWallMeas, i)')
        v-icon delete
  v-layout(row justify-center)
    v-flex(xs12 sm10 md8)
      v-btn(block color='accent' @click.native='addMeasurement(calcInput.ferruleWallMeas)' :disabled='calcInput.ferruleWallMeas.length < 6 ? false : true') Add A Measurement
block nav-btns-left
  v-btn(fab small :color='theAppIsDark ? colorProps.btns.stepNav.dark.bg : colorProps.btns.stepNav.light.bg' @click='currentStep = 3')
    include ../Global/btns/_step-btn-back-icon.pug
block nav-btns-right
  v-btn(fab small :color='theAppIsDark ? colorProps.btns.stepNav.dark.bg : colorProps.btns.stepNav.light.bg' @click='doTheCalculation()' :disabled='stepNextDisabled')
    include ../Global/btns/_step-btn-next-icon.pug
