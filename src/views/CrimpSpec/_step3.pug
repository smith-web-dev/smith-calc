extends ../layouts/_stepper-step-main.pug
include ../mixins/_index.pug
block title
  | Determine the average thickness of the hose wall
block subtitle
  | Measure the wall of the hose in at least 3 places
block card-body
  div(v-for='(f, i) in calcInput.hoseWallMeas' :key='i')
    v-text-field(:color='fieldColor' type='number' label='' box v-model='calcInput.hoseWallMeas[i]' clearable :label='`Hose wall thickness #` + (i + 1)')
      v-btn(flat icon color='error' slot='append-outer' v-show='(i + 1) > 3' style='top: -10px;' @click.native='removeMeas(calcInput.hoseWallMeas, i)')
        v-icon delete
  v-layout(row justify-center)
    v-flex(xs8)
      v-btn(block round :color='btnColor' @click.native='addMeasurement(calcInput.hoseWallMeas)' :disabled='calcInput.hoseWallMeas.length < 6 ? false : true') Add A Measurement
block nav-btns-left
  +stepBtnBack(click='moveStep(`b`)')
block nav-btns-right
  +stepBtnNext(click='moveStep(`f`)')
