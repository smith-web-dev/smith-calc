v-card-title.pb-0(primary-title style='display: block;')
  .headline Pulley diameters
  div.grey--text.text--darken-1 Enter the diameters of the pulleys in inches.
v-card-text
  v-container.pa-0(fluid)
    v-layout(row)
      v-text-field(type='number' :label='calcInput.equalPulleys ? `Pulley diameters` : `First pulley diameter`' box v-model='calcInput.pully.one' clearable)
    v-layout(row)
      v-text-field(type='number' v-show='!calcInput.equalPulleys' label='Second pulley diameter' box v-model='calcInput.pully.two' clearable)
    v-layout(row)
      v-checkbox(label='Pulleys have equal diameters' v-model='calcInput.equalPulleys')

