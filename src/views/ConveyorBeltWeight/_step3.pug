extends ../layouts/_stepper-step-main.pug
block title
  | Enter the length of the belt
block subtitle
  | You can enter feet, inches, or feet and inches
block card-body
  v-layout(row)
    v-spacer
    v-flex(xs6)
      v-text-field(type='number' label='Feet' box v-model='calcInput.length.feet' clearable)
    v-spacer
  v-layout(row)
    v-spacer
    v-flex(xs6)
      v-text-field(type='number' label='Inches' box v-model='calcInput.length.inches' clearable)
    v-spacer
block nav-btns-left
  v-btn(fab small :color='theAppIsDark ? colorProps.btns.stepNav.dark.bg : colorProps.btns.stepNav.light.bg' @click='moveStep(`b`)')
    include ../Global/btns/_step-btn-back-icon.pug
block nav-btns-right
  v-btn(fab small :color='theAppIsDark ? colorProps.btns.stepNav.dark.bg : colorProps.btns.stepNav.light.bg' :disabled='stepNextDisabled' @click='moveStep(`f`)')
    include ../Global/btns/_step-btn-next-icon.pug
