//- v-card.mb-5
v-card-title.pb-0(primary-title style='display: block;')
  .headline Determine belt width
  div.grey--text.text--darken-1 Either select a standard belt width or enter a custom width
v-card-text
  v-container.pa-0(fluid)
    v-layout(row)
      //- v-select(:items='beltData.types')
      v-select.belt-types-select(box v-model='calcInput.width.sel' :items='beltData.widths' label='Select a width' clearable)
    v-layout(row)
      v-text-field(type='number' label='Enter a custom width' box v-model='calcInput.width.box' clearable)
//- Navigation buttons
v-layout(row justify-center)
  v-flex(flex xs6 sm5 md4)
    v-btn(@click='currentStep = 1')
      v-icon(left) navigate_before
      | Back
  v-flex.text-xs-right(flex xs6 sm5 md4)
    //- v-btn.primary(@click='moveStep(`f`)' :disabled='$makeAverage(calcInput.shankMeas) == 0 ? true : false')
    v-btn.primary(@click='moveStep(`f`)' :disabled='calcInput.width.sel === null && calcInput.width.box === null ? true : false')
      | Next
      v-icon(right) navigate_next
