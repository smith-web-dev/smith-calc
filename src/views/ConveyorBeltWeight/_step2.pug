extends ../layouts/_stepper-step-main.pug
block title
  | Determine belt width
block subtitle
  | Either select a standard belt width or enter a custom width
block card-body
  v-layout(row)
    v-select.belt-types-select(box v-model='calcInput.width.sel' :items='beltData.widths' label='Select a width' clearable)
  v-layout(row)
    v-spacer
    p.sirp-divider
      span or
    v-spacer
  v-layout(row)
    v-text-field(type='number' label='Enter a custom width' box v-model='calcInput.width.box' clearable)
block nav-btns-left
  include ../Global/btns/_step-btn-back.pug
block nav-btns-right
  include ../Global/btns/_step-btn-next.pug
