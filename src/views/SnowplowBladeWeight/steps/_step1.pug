v-card-title.pb-0(primary-title style='display: block;')
  .headline Select Material Size
  //- div.grey--text.text--darken-1 For help selecting the appropriate material size for your plow, <a href="#">click here</a>
v-card-text
  v-container.pa-0(fluid)
    v-select(:dark='theAppIsDark' box :items='bladeSizes' label='Select a material size' v-model='calcInput.size' clearable color='red')
//- Navigation buttons
v-layout(row justify-center)
  v-flex(flex xs6 sm5 md4)
  v-flex.text-xs-right(flex xs6 sm5 md4)
    v-btn(fab small :color='theAppIsDark ? colorProps.btns.stepNav.dark.bg : colorProps.btns.stepNav.light.bg' :disabled='calcInput.size === null ? true : false' @click='moveStep(`f`)')
      include ../../Global/btns/_step-btn-next-icon.pug
