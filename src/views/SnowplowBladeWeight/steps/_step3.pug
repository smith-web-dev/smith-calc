extends ../../layouts/_stepper-step-main.pug
block title
  | Enter quantity
block subtitle
  | Either enter or use the arrows to adjust the quantity of snowplow blades
block card-body
  v-layout(row)
    v-spacer
    v-flex.text-xs-center(xs6)
      v-text-field(
        append-outer-icon='fas fa-plus'
        @click:append-outer='qtyChange(1)'
        prepend-icon='fas fa-minus'
        @click:prepend='qtyChange(-1)'
        type='number'
        label='Quantity'
        box
        v-model='calcInput.quantity'
        :color='theAppIsDark ? colorProps.btns.stepNav.dark.fg : colorProps.btns.stepNav.light.fg'
        clearable)
    v-spacer
block nav-btns-left
  v-btn(fab small :color='theAppIsDark ? colorProps.btns.stepNav.dark.bg : colorProps.btns.stepNav.light.bg' @click='moveStep(`b`)')
    include ../../Global/btns/_step-btn-back-icon.pug
block nav-btns-right
  v-btn(fab small :color='theAppIsDark ? colorProps.btns.stepNav.dark.bg : colorProps.btns.stepNav.light.bg' @click='moveStep(`f`)' :disabled='stepNextDisabled')
    include ../../Global/btns/_step-btn-next-icon.pug
