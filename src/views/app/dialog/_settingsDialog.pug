v-dialog(v-model='dialogs.settings' max-width='560px' persistent)
  v-card(:dark='isDark')
    v-card-title(primary-title)
      div.title Settings
    v-container.pt-0(fluid)
      v-layout(row)
      v-list
        //- Profile Info
        include ./settings/_profileInfo.pug
        v-subheader Preferences
        include ./settings/_pref-decimalRounding.pug
        v-divider
        include ./settings/_pref-resetAll.pug
        v-divider

        v-subheader Appearance
        include ./settings/_appear-darkMode.pug
        v-divider
      v-layout(row justify-end)
        v-btn(
          color='primary'
          @click='closeSettings()'
          :loading='saving')
          | Done
