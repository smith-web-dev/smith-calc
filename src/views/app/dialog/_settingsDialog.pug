v-dialog(v-model='settingsDialog' max-width='560px')
  v-card(:dark='isDark')
    v-card-title(primary-title)
      div.title Settings
    v-container.px(fluid)
      v-list
        //- Decimal Rounding
        v-list-tile()
          v-list-tile-content
            v-list-tile-title Decimal Rounding
          v-list-tile-action
            v-select(
              :suffix='decPlaSuffix'
              v-model='decimalRounding'
              hide-details
              :color='fieldColor'
              :items='decimalItems'
              style='width: 100px'
              @change='changeDecimalRounding()')
        v-divider
        //- Dark Mode
        v-list-tile(
          @click='toggleDarkMode()')
          v-list-tile-content
            v-list-tile-title Enable dark mode
          v-list-tile-action
            v-switch(
              v-model='isDark')
        v-divider
        //- Clear Data
        v-list-tile(
          @click='clearDataDialog = !clearDataDialog'
          :disabled='localDataCheck')
          v-list-tile-content
            v-list-tile-title Clear all app data
        v-divider
      v-layout(row justify-end)
        v-btn(
          color='primary'
          @click='settingsDialog = false')
          | Done
