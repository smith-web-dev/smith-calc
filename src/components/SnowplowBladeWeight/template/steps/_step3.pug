extends /layouts/_stepper-step-main.pug
block title
  | Quantity
block subtitle
  | Enter the quantity of snowplow blades for this size and length.
block card-body
  v-layout(
    row)
    v-spacer
    v-flex.text-xs-center(
      xs9)
      v-text-field(
        append-outer-icon='fas fa-plus'
        @click:append-outer='qtyChange(1)'
        prepend-icon='fas fa-minus'
        @click:prepend='qtyChange(-1)'
        type='number'
        label='Quantity'
        box
        v-model='calcInput.quantity'
        :color='fieldColor'
        clearable)
    v-spacer
block nav-btns-left
  +stepBtnBack(
    click='moveStep(`b`)')
block nav-btns-right
  +stepBtnNext(
    click='moveStep(`f`)')
