extends /layouts/_stepper-step-main.pug
block title
  | Enter snowplow blade length
block subtitle
  | You can enter {{ units.length.lg.fullPl }}, {{ units.length.sm.fullPl }}, or {{ units.length.lg.fullPl }} and {{ units.length.sm.fullPl }}
block card-body
  v-layout(
    row)
    v-spacer
    v-flex(
      xs9)
      v-text-field(
        type='number'
        label='Feet'
        box
        v-model='calcInput.length.feet'
        :color='fieldColor'
        clearable)
    v-spacer
  v-layout(
    row)
    v-spacer
    v-flex(
      xs9)
      v-text-field(
        type='number'
        label='Inches'
        box
        v-model='calcInput.length.inches'
        :color='fieldColor'
        clearable)
    v-spacer
block nav-btns-left
  +stepBtnBack(
    click='moveStep(`b`)')
block nav-btns-right
  +stepBtnNext(
    click='moveStep(`f`)')
