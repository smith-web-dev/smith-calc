extends /layouts/_stepper-step-main.pug
block title
  | Results
block card-body
  v-list(
    three-line
    subheader)
    //- Part size x length
    v-list-tile
      v-list-tile-content
        v-list-tile-title Description
        v-list-tile-sub-title {{ descDisp }}
      v-list-tile-action
        +copyBtn(
          click='doCopy(descDisp)')
    //- Weight per piece
    v-list-tile
      v-list-tile-content
        //- v-list-tile-title(v-html='decToFrac')
        v-list-tile-title Weight per piece
        v-list-tile-sub-title {{ commaNum(pcWeight) }} {{ units.weight.lg.fullPl }}
      v-list-tile-action
        +copyBtn(
          click='doCopy((pcWeight + ` ` + units.weight.lg.fullPl))')
    //- Extended weight
    v-list-tile
      v-list-tile-content
        v-list-tile-title Extended quantity weight
        v-list-tile-sub-title {{ commaNum(extWeight) }} {{ units.weight.lg.fullPl }}
      v-list-tile-action
        +copyBtn(
          click='doCopy((extWeight + ` ` + units.weight.lg.fullPl))')
block nav-btns-left
  v-btn(
    round
    @click='resetAll(defaultInputs)')
    v-icon(
      left
      small)
      | far fa-undo
    | Start Over
block nav-btns-right
  v-btn(
    round
    :color='btnColor'
    @click.native='addToShipment()')
    | Add to shipment
    v-icon(
      right
      small)
      | far fa-plus
