extends ../../../../views/layouts/_stepper-step-main.pug
include ../../../../views/mixins/_index.pug
block title
  | Determine the average wall thickness of the sleeve or ferrule
block subtitle
  | Measure the wall of the sleeve or ferrule in at least 3 places
block card-body
  div(v-for='(f, i) in calcInput.ferruleWallMeas' :key='i')
    v-text-field(:color='fieldColor' type='number' label='' box v-model='calcInput.ferruleWallMeas[i]' clearable :label='`Ferrule wall thickness #` + (i + 1)')
      v-btn(flat icon color='error' slot='append-outer' v-show='(i + 1) > 3' style='top: -10px;' @click.native='removeMeas(calcInput.ferruleWallMeas, i)')
        v-icon delete
  v-layout(row justify-center)
    v-flex(xs8)
      v-btn(block round :color='btnColor' @click.native='addMeasurement(calcInput.ferruleWallMeas)' :disabled='calcInput.ferruleWallMeas.length < 6 ? false : true') Add A Measurement
block nav-btns-left
  +stepBtnBack(click='moveStep(`b`)')
block nav-btns-right
  +stepBtnNext(click='doTheCalculation()')
