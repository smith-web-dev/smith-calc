extends /layouts/_calc-main.pug

block stepper-steps
  include ./steps/_step0.pug
  v-stepper-items
    //- Width
    v-stepper-content(
      class='px-1 pt-1'
      step='1')
      include ./steps/_step1.pug

    //- Length
    v-stepper-content(
      class='px-1 pt-1'
      step='2')
      include ./steps/_step2.pug

    //- Result
    v-stepper-content(
      class='px-1 pt-1'
      step='3')
      include ./steps/_step3.pug
