v-stepper-header.elevation-0
  //- Width
  v-stepper-step(
    :color='isDark ? colors.steps.headerIndicator.dark : colors.steps.headerIndicator.light'
    :complete='currentStep > 1'
    step='1')
  v-divider
  //- Length
  v-stepper-step(
    :color='isDark ? colors.steps.headerIndicator.dark : colors.steps.headerIndicator.light'
    :complete='currentStep > 2'
    step='2')
  v-divider
  //- Results
  v-stepper-step(
    :color='isDark ? colors.steps.headerIndicator.dark : colors.steps.headerIndicator.light'
    step='3')
