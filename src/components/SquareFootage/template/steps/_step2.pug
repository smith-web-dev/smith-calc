extends /layouts/_stepper-step-main.pug
block title
  | Enter the length of the material
//- block subtitle
block card-body
  v-layout.mb-4(row wrap justify-center)
    v-flex(xs6)
      v-text-field.v-input__joined--left(
        box
        clearable
        v-model='calcInput.length.ft'
        type='number'
        :color='fieldColor'
        :label='units.length.lg.fullPl | capitalize')
    v-flex(xs6)
      v-text-field.v-input__joined--right(
        box
        clearable
        v-model='calcInput.length.in'
        type='number'
        :color='fieldColor'
        :label='units.length.sm.fullPl | capitalize')
block nav-btns-left
  +stepBtnBack(
    click='moveStep(`b`)')
block nav-btns-right
  +stepBtnNext(
    click='moveStep(`f`)')
