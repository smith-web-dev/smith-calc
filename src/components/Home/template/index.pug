v-container(
  fill-height)
  v-layout(
    class='text-xs-center'
    justify-center
    align-center
    wrap)
    v-flex(
      xs12)
      p(
        class='headline font-weight-light')
        | Select a calculator to get started
    v-flex.home-calc-btn(
      shrink
      v-for='(n, i) in $arrayFilter(navItems, `display`, true)'
      v-if='!n.divider && !n.heading'
      :key='i'
      xs6
      md4)
      v-hover(close-delay='0')
        v-btn.v-btn--xlarge(
          slot-scope='{ hover }'
          :class='`elevation-${hover ? 16 : 4}`'
          color='accent'
          fab
          :to='n.path')
          v-icon.home-calc-btn--icon(
            large)
            | {{ n.icon }}
      br
      span.subheading.font-weight-light {{ n.text }}
