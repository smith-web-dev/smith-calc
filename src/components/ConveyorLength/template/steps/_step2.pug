extends /layouts/_stepper-step-main.pug
block title
  | Determine span between pullies
block subtitle
  | Enter the distance in feet between the shaft centers
block card-body
  v-layout(
    row)
    v-spacer
    v-flex(
      xs6)
      v-text-field(
        :color='fieldColor'
        type='number'
        :label='units.length.lg.fullPl | capitalize'
        box
        v-model='calcInput.span.feet'
        clearable)
    v-spacer
  v-layout(
    row)
    v-spacer
    v-flex(
      xs6)
      v-text-field(
        :color='fieldColor'
        type='number'
        :label='units.length.sm.fullPl | capitalize'
        box
        v-model='calcInput.span.inches'
        clearable)
    v-spacer
block nav-btns-left
  +stepBtnBack(
    click='moveStep(`b`)')
block nav-btns-right
  +stepBtnNext(
    click='moveStep(`f`)')
